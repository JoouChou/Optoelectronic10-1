#back-img
  width 100%
  height 100%
  background-image  url(res/img/IMG_8286.jpg)
  background-size 100% 100%

.ui.grid
  position absolute
  width 100%

#timer
  position relative
  top 5vh

#timer > .head
  text-align right
  font-size 6vw
  font-weight bold
  color white
  padding-top 3vw
#timer > .num
  text-align center
  color #00B5AD
  font-size 10vw
#timer > .tail
  text-align left
  font-size 6vw
  font-weight bold
  color white
  padding-top 3vw
  
#video
  margin 0 auto
  width 600px
  display block
